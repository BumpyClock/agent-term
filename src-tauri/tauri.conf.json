{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Agent Term",
  "version": "0.1.1",
  "identifier": "com.adityasharma.agent-term-app",
  "build": {
    "beforeDevCommand": "node src-tauri/scripts/dev.mjs",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build && node src-tauri/scripts/build-sidecar.mjs",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Agent Term",
        "width": 800,
        "height": 600,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "trafficLightPosition": {
          "x": 24,
          "y": 28
        },
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "bin/agentterm-mcp-proxy"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}